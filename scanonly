#!/bin/sh

# download
download_file_code () {
wget --no-check-certificate -q "https://raw.githubusercontent.com/itvn9online/Bitcoin-private-key-scan/main/"$1 -O $1
}

cd ~
rm -rf /root/Bitcoin/scan.*
cd /root/Bitcoin
download_file_code "scan.js"
download_file_code "config.js"
download_file_code "functions.js"

cd ~
chmod +x /root/Bitcoin/scan.js

# run
cd /root/Bitcoin
node scan
