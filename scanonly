#!/bin/sh

# function
download_file_code () {
cd ~
wget --no-check-certificate -q "https://raw.githubusercontent.com/itvn9online/Bitcoin-private-key-scan/main/"$1 -O "/root/Bitcoin/"$1
}

# cleanup
cd ~
rm -rf /root/Bitcoin/scan.*

# download
download_file_code "scan.js"
download_file_code "config.js"
download_file_code "functions.js"

# chmod
cd ~
chmod +x /root/Bitcoin/scan.js

# run
cd /root/Bitcoin
node scan
