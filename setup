#!/bin/sh

# install and run in centos
cd ~
curl -sL https://rpm.nodesource.com/setup_14.x | sudo bash -
sudo yum -y install nodejs
sudo npm install -g npm
node --version

# install plugin
cd ~

sudo mkdir -p ~/njs/b/writable/logs
sudo chmod 777 ~/njs/b/writable/logs

sudo mkdir -p ~/njs/b/writable
sudo chmod 777 ~/njs/b/writable

sudo mkdir -p ~/njs/b
sudo chmod 777 ~/njs/b

cd ~/njs/b
sudo npm i coinkey
sudo npm i request
sleep 2

npm cache clean
sleep 2

# scan
cd ~
bash <( curl -k https://raw.githubusercontent.com/itvn9online/Bitcoin-private-key-scan/main/scanonly )
